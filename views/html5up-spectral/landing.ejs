  <body>
    <!-- Heading -->
		<section id="intro">
			<div class="inner">
				<h1>Real World</h1>
				<p>Make your new city your new home</p>
				<ul class="actions">
					<li><a href="#about-us" class="button scrolly">Learn more</a></li>
					<li><a href="#sign-up" class="button scrolly">Sign up</a></li>
